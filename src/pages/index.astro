---
import Layout from "@/layouts/Layout.astro";

import { Download, Github, ExternalLink } from "@lucide/astro";

const title = "Home";
const description =
  "Full-stack developer with a backend focus. Organized and collaborative, building scalable web apps with clean code and smooth user experiences.";

interface Project {
  title: string;
  description: string;
  technologies: string[];
}

const projects: Project[] = [
  {
    title: "Hardware Store Management & Shopping System",
    description:
      "Developed a full-stack solution for a hardware store, including a backend API and a cross-platform mobile application. The system enables employees to manage inventory and internal operations, while customers can browse products and make purchases seamlessly.",
    technologies: ["Express.js", "MongoDB", "React Native"],
  },
  {
    title: "Bookstore Management & Shopping System",
    description:
      "Developed a full-stack web application for a bookstore, featuring a backend API and a web-based frontend. The system enables employees to manage inventory and internal operations, while customers can browse books and make purchases online.",
    technologies: ["PHP", "MySQL", "HTML", "Tailwind CSS", "JavaScript"],
  },
  {
    title: "Lottery Management & Betting System",
    description:
      "Developed a full-stack lottery system with a web application frontend and a backend API. Players can purchase tickets, place bets, and recharge their digital wallets using PayPal, while administrators manage operations, monitor transactions, and control system settings.",
    technologies: ["React", "Express.js", "MySQL", "PayPal API"],
  },
  {
    title: "Cosmetics Store Web Platform",
    description:
      "Built a modern web application for a cosmetics store, leveraging serverless and cloud-native technologies. The platform allows customers to browse products, manage accounts, and make purchases, while administrators can oversee inventory and store operations.",
    technologies: ["Cloudflare Workers", "Astro", "Tailwind CSS", "Supabase"],
  },
];
---

<Layout title={title} description={description}>
  <!-- Hero section -->
  <section class="pt-32 pb-16 px-6" aria-label="Introduction">
    <div class="max-w-6xl mx-auto">
      <p class="text-xs mb-3 text-neutral-500 font-bold uppercase tracking-[0.2em]">Hello, I'm</p>
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 uppercase tracking-tighter leading-none">
        Pablo Sosa
      </h1>
      <h2 class="text-lg sm:text-xl md:text-2xl mb-6 text-neutral-500 font-light max-w-2xl leading-tight">
        Computer Science Student
      </h2>
      <p class="text-base md:text-lg max-w-xl mb-10 text-neutral-600 leading-relaxed italic">
        I'm a full-stack developer who loves working across backend and frontend - though backend is where I shine. I
        keep things organized and enjoy helping others whenever I can.
      </p>
      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href="#projects"
          class="border border-black px-6 py-3 bg-white text-black hover:bg-black hover:text-white flex items-center justify-center gap-2 w-full sm:w-auto font-bold uppercase tracking-wide text-xs transition-colors"
          >View My Work</a
        >
        <a
          href="/documents/resume.pdf"
          download="pablo_sosa_resume.pdf"
          class="border border-black px-6 py-3 bg-white text-black hover:bg-black hover:text-white flex items-center justify-center gap-2 w-full sm:w-auto font-bold uppercase tracking-wide text-xs transition-colors"
        >
          <Download size={16} />
          Download Resume
        </a>
      </div>
    </div>
  </section>

  <!-- Projects section -->
  <section id="projects" class="py-16 px-6 bg-white border-t border-black" aria-label="Featured Projects">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold mb-12 uppercase tracking-tight">Featured Projects</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.map((project) => (
            <li class="flex">
              <article class="w-full border border-black p-6 hover:bg-black hover:text-white group flex flex-col justify-between transition-colors">
                <div>
                  <h3 class="text-lg font-bold mb-3 uppercase truncate" title={project.title}>
                    {project.title}
                  </h3>
                  <p
                    class="mb-6 text-sm text-neutral-500 group-hover:text-neutral-400 leading-relaxed line-clamp-2"
                    title={project.description}
                  >
                    {project.description}
                  </p>
                  <ul class="flex flex-nowrap items-center gap-2 mb-8 overflow-hidden" aria-label="Technologies used">
                    {project.technologies.map((technology) => (
                      <li class="text-[10px] font-bold uppercase tracking-wider border border-black group-hover:border-white px-2 py-0.5 whitespace-nowrap">
                        {technology}
                      </li>
                    ))}
                  </ul>
                </div>
                <div class="flex gap-4 text-xs font-bold uppercase tracking-wider pt-4 border-t border-neutral-100 group-hover:border-neutral-800 transition-colors">
                  <a href="#" class="flex items-center gap-1.5 hover:underline">
                    <Github size={14} />
                    View Code
                  </a>
                  <a href="#" class="flex items-center gap-1.5 hover:underline">
                    <ExternalLink size={14} />
                    View Live
                  </a>
                </div>
              </article>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
